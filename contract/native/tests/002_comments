@test(block_comment)
contract test {
    /* This
     * is
a

     ********
     * comment
     */

    /******************************************************************************
     comments for title
     *****************************************************************************/

    /* comments with //
     */
}

@test(line_comment)
contract test {
// This is a cpp-style comment

    // This is /* a comment with c comment
}

@test(outside_comment)
/* This is an outside block comment */
// This is an outside line comment
contract test {
}

@test(unterminated_comment)
@error(ERROR_UNTERMINATED_COMMENT)
contract test {
    /* This is an unterminated comment
}
