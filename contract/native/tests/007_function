@desc empty_function
contract test {
    func f1() { }
    func f2() { 
        ;
    }
}

@desc function_modifier
contract test {
    local func f1() { }
    local payable func f2() { }
    local readonly func f3() { }
    local readonly payable func f4() { }
    readonly func f5() { }
    readonly payable func f6() { }
    payable func f7() { }
}

@desc invalid_payable_modifier
@error ERROR_SYNTAX
contract test {
    payable local func f1() { }
}

@desc parameter_declaration
contract test {
    func f1(int p1) { }
    func f2(int p1, string p2) { }
    func f3(int p1, map(int, string) p2) { }
    func f4(int p1[]) { }
}

@desc return_declaration
contract test {
    func f1() { return; }
    func f2() int { return 1; }
    func f3() int, string { return 1 + 1, "value"; }
    func f4() map(int, string) { return null; }
}
