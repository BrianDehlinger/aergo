    int i[1] = new { 1, 2 };
    int j[2] = new { 1 };
    int k[3][2] = new { { 1, 2 }, { 3 } };
    int l[3][2] = new { { 1, 2 }, { 3, 4, 5 } };
}

@test(array_allocator)
@run(test.test)
contract test {
    bool b[1] = new bool[1];
    int64 i[2] = new int64[2];
    //double d[3] = new double[3];
    string s[4] = new string[4];

    int v1[] = new int[2];
    int v2[][] = new int[2][2];
    int v3[][4] = new int[2][4];

    test() {
        pragma assert(b[0] == false);
        pragma assert(i[1] == 0);
        pragma assert(s[1] == "");
        pragma assert(s[3] == null);
        pragma assert(v1[1] == 0);
        pragma assert(v2[1][1] == 0);
        pragma assert(v3[0][2] == 0);
        pragma assert(v3[1][3] == 0);
    }
}

@test(struct_initializer)
@run(test.test)
contract test {
    type s1 struct {
        int a;
        byte b;
        string c;
    }
    s1 v1 = new { 1, 0x01, "a" };
    s1 v2, v3 = new { 2, 0x02, "b" }, new { 3, 0x03, "c" };

    /*
    type s2 struct {
        int16 a;
        double b[2];
    }
    s2 v4 = new { 128, { 5.34, 314e-2 } };
    */

    type s3 struct {
        int x;
        s1 y;
    }
    s3 v5 = new { 1, { 2, 3, "4" } };
    s3 v6, v7 = new { 1, { 1, 0x01, "a" } }, new { 2, { 2, 0x02, "b" } };

    test() {
        pragma assert(v1.a == 1);
        pragma assert(v1.b == 1);
        pragma assert(v1.c == "a");

        pragma assert(v2.a == 2);
        pragma assert(v2.b == 2);
        pragma assert(v2.c == "b");

        pragma assert(v3.a == 3);
        pragma assert(v3.b == 3);
        pragma assert(v3.c == "c");

        pragma assert(v5.x == 1);
        pragma assert(v5.y.a == 2);
        pragma assert(v5.y.b == 3);
        pragma assert(v5.y.c == "4");
    }
}

