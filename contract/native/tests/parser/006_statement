@desc assignment
contract test {
    int v1;
    int v2;
    string v3, v4;
    bool v5, v6;

    test() {
        v1 += 1;
        v1 -= 1;
        v1 *= 1 + 1;
        v1 /= 2;
        v1 %= 10;

        v2 |= 0xff;
        v2 &= 0x01;
        v2 ^= 0x01;

        v1, v2 = 1, 2;
        (v1, v2) = 1 * 1, 2;
        v3, v4 = ("a", "b");
        v3, v4 = ("a", "b");

        v5 = f1(true);
        v5, v6 = f2(1, "student");
    }
}

@desc unary_expression
contract test {
    int v1 = 1;

    test() {
        v1++;
        ++v1;
        v1--;
        --v1;
        ;
    }
}

@desc if_else
contract test {
    int v1 = 1;
    string v2;

    test() {
        if (0 == 0) {
            v2 = "sole if";
        }

        if (!true) {
            v2 = "this is if";
        }
        else {
            v2 = "this is else";
        }

        if (v1 == 1) {
            v2 = "first";
        } else if (f1(v2)) {
            v2 = "second";
        } else {
            v2 = "don't care";
        }
    }
}

@desc missing_if_parenthesis
@error SYNTAX_ERROR
contract test {
    test() {
        if 1 == 1 {
            ;
        }
    }
}

@desc missing_if_brace
@error SYNTAX_ERROR
contract test {
    test() {
        if (1 == 1) 
            ;
    }
}

@desc switch_case
contract test {
    int v1;
    string v2;

    test() {
        switch (v1) {
        case 1:
            v2 = "case 1";
            break;
        case 2:
            { v2 = "case 2"; }
            break;
        default:
            break;
        }

        switch {
        case v1 == 1: { }
            break;
        case v1 == 1 + 1:
            break;
        case v1 == f1():
            break;
        }
    }
}

@desc for_loop
contract test {
    int v1;

    test() {
        for (int i = 0; i < 10; i++) { 
            v1 += i;
        }
        for (int i = f1(); i < f2(); i++) { }
        for (i = 0; i < 10; i++) { }
        for ( ; i < 10; ) { }
        for ( ; i < 10; i++) { }
        for ( ; ; i++) { }
        for ( ; ; ) { }
        for {
            v1++;
            if (v1 % 2 == 0) {
                break;
            }
            else {
                continue;
            }
        }
    }
}

@desc foreach_loop
contract test {
    string v1[10];

    test() {
        foreach (int i, string j in v1) { }
        foreach (int i, string j in f1()) { }

        //foreach (int i, string j = range v1) { }
    }
}

@desc inline_sql
contract test {
    int v1;
    string v2;
    test() {
        v1 = select id from emp;
        v1, v2 = 
            select id, 
                   name 
              from emp;

        insert into emp values (10, "Sam");
        insert into 
            emp values (20, "Bill");

        delete from emp where id = 10;
        delete from emp
        where name = "Bill";

        commit;
        rollback;

        //foreach (int i, string j in (select id, name from emp)) { }
    }
}

@desc missing_sql_terminator
@error UNTERMINATED_SQL_ERROR
contract test {
    int v1;
    test() {
        v1 = select id from emp
    }
}

@desc assign_with_dml
@error SYNTAX_ERROR
contract test {
    int v1;
    test() {
        v1 = insert into t values (1);
    }
}
